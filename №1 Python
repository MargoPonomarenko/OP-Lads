import math   
print('Данi гiпотенуза i катет прямокутного трикутника. Знайти радiус вписаного у нього кола.');
c = int(input(' Введiть значення гiпотенузи '))
a = int(input(' Введiть значення катета '))
b = math.sqrt(math.pow(c, 2) - math.pow(a, 2));
r = (a + b - c) / 2;
print("Радіус вписаного кола = ", r);
